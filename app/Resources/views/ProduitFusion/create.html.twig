{% extends 'base.html.twig' %}

{% block title %} Créer un Produit de fusion {% endblock %}
	
{% block body %}
	<h1>Ajouter un Produit de fusion </h1>
	<p class="lead">Consulter et editer les Produit de fusion utilisées dans la gestion commerciale.</p>
<hr>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			{{ form_start(form) }}
			<div class="well well-lg">
				<div class="row">
					<div class="col-md-3">
						 {{ form_row(form.quantite) }}
					</div>
					<div class="col-md-3">
						 {{ form_row(form.prixVenteHT) }}
					</div>		
				</div>
				<div class="row">	
					<div class="col-md-6">
						 {{ form_row(form.designation) }}
					</div>
				</div>					
				<div class="row">	
					<div class="col-md-12">
						 {{ form_row(form.description) }}
					</div>
				</div>
				<div class="row">	
					<div class="col-md-3">
						 {{ form_row(form.optionnel) }}
					</div>				
				</div>
			</div>
			<hr>			
			<div class="row" align="center">
				<div>
					<a type="button" class="btn btn-default" href="{{ url('devis_apercu', {'id' : id})}}">Annuler</a>
					<button type="submit" class="btn btn-primary" formnovalidate>Créer un Produit de fusion</button>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>

{% endblock %} 
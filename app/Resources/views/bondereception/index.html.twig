{% extends 'base.html.twig' %}

{% block body %}
    <h1>liste des bons de receptions</h1>
    <div class="row">
        <div class="col-lg-12">
            <hr>
            <table id="liste_devis" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Fournisseur</th>
                    <th>Nombre des produits</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for bonDeReception in bonDeReceptions %}
                    <tr>
                        <td>
                            <a href="{{ path('reception_show', { 'id': bonDeReception.id }) }}">{{ bonDeReception.id }}</a>
                        </td>
                        <td>{% if bonDeReception.date %}{{ bonDeReception.date|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if bonDeReception.bonDeCommandeFournisseur %}{{ bonDeReception.bonDeCommandeFournisseur.fournisseur }}{% endif %}</td>
                        <td>{{ bonDeReception.receptionProduits|length }}</td>
                        <td>
                            <a class="btn btn-xs btn-info" href="{{ path('reception_show', { 'id': bonDeReception.id }) }}">Voir</a>
                            <a class="btn btn-xs btn-warning" href="{{ path('reception_edit', { 'id': bonDeReception.id }) }}">Modifier</a>
                            {% if bonDeReception.file %}
                            <a class="btn btn-xs btn-primary" target="_blank" href="{{ asset(bonDeReception.file.fullPath) }}">Afficher BL fournisseur</a>
                        {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    </table>


{% endblock %}

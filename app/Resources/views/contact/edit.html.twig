{% extends 'base.html.twig' %}
{% block title %} Edit {{ contact}} {% endblock %}

{% block body %}


<h1>Editer un contact</h1>
	<p class="lead">Consulter et editer les contact utilis√©es dans la gestion commerciale.<br> A venir, une mise a jour automatique des contact.</p>
<hr>
<h2 class="page-header">Modification de {{ contact }}</h2>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			{{ form_start(form) }}
			{{ form_errors(form) }}

			<div class="row well well-lg">			
				<div class="col-md-2 form-group {% if not form.genre.vars.valid %} has-error {% endif %}">
					{{ form_label(form.genre) }}
					{{ form_errors(form.genre) }}
					{{ form_widget(form.genre) }}
				</div>
				<div class="col-md-2 form-group {% if not form.civilite.vars.valid %} has-error {% endif %}">
					{{ form_label(form.civilite) }}
					{{ form_errors(form.civilite) }}
					{{ form_widget(form.civilite) }}
				</div>
				<div class="col-md-3 form-group {% if not form.prenom.vars.valid %} has-error {% endif %}">
					{{ form_label(form.prenom) }}
					{{ form_errors(form.prenom) }}
					{{ form_widget(form.prenom) }}
				</div>
				<div class="col-md-3 form-group {% if not form.nom.vars.valid %} has-error {% endif %}">
					{{ form_label(form.nom) }}
					{{ form_errors(form.nom) }}
					{{ form_widget(form.nom) }}
				</div>
				<div class="col-md-2 form-group {% if not form.defaut.vars.valid %} has-error {% endif %}">
					{{ form_label(form.defaut) }}
					{{ form_errors(form.defaut) }}
					{{ form_widget(form.defaut) }}
				</div>				
			</div>
			<div class="row well well-lg">
				<div class="col-md-6 form-group {% if not form.email.vars.valid %} has-error {% endif %}">
					{{ form_label(form.email) }}
					{{ form_errors(form.email) }}
					{{ form_widget(form.email) }}
				</div>
				<div class="col-md-6 form-group {% if not form.telephone.vars.valid %} has-error {% endif %}">
					{{ form_label(form.telephone) }}
					{{ form_errors(form.telephone) }}
					{{ form_widget(form.telephone) }}
				</div>
			</div>
			<div class="row well well-lg">
				<div class="col-md-6 form-group {% if not form.departement.vars.valid %} has-error {% endif %}">
					{{ form_label(form.departement) }} <br>
					{{ form_errors(form.departement) }}
					{{ form_widget(form.departement) }}
				</div>
				<div class="col-md-6 form-group {% if not form.poste.vars.valid %} has-error {% endif %}">
					{{ form_label(form.poste) }}
					{{ form_errors(form.poste) }}
					{{ form_widget(form.poste) }}
				</div>	
			</div>
			<hr>			
				<div class="row" align="center">
					{% if source == "Client" %}
					<a type="button" href="{{ url('client_voir', {'id' : contact.client.id})}}" class="btn btn-default"><i class="fa fa-undo" aria-hidden="true"></i> Annuler</a>
					{% else %}
					<a type="button" href="{{ url('fournisseur_voir', {'id' : contact.fournisseur.id})}}" class="btn btn-default"><i class="fa fa-undo" aria-hidden="true"></i> Annuler</a>
					{% endif %}

					<button type="submit" class="btn btn-primary" formnovalidate>Modifier contact</button>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
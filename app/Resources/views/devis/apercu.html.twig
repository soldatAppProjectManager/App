  <div class="row">
    <div class="well" style="background-color: #fcfcfc">
      <table class="table table-hover">
        <thead>
          <tr>
            <th style="text-align:center;">
              <a type="button" class="btn btn-success invisible" href="{{ url('produitdevis_create', {'id' : devis.id})}}"><i class="fa fa-plus" aria-hidden="true"></i></a>
            </th>

              <td  style="border-top: 0px"></td>            
            </tr>        
             <tr> 
              <td style="border-top: 0px"></td>
              <th scope="row" style="border-top: 0px"></th>
              <td style="border-top: 0px"></td>                       
              <td style="border-top: 0px"></td>            
              <td style="border-top: 0px"></td>            
              <td><strong>TOTAL TTC: </strong></td>            
              <td id="totalTTC"><strong>{{devis.getTotalTTC()| number_format(2, '.', ',') }} {{devis.deviseVente.symbol}}</strong></td>            
              <td style="border-top: 0px"></td>            
            </tr>        

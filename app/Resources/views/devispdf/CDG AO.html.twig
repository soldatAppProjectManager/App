<head>
<meta charset='utf-8'>
  
  	<title>Printed document</title>
  
  	<style type="text/css">
	        * {
	        font-size: 70%;
            font-family: sans-serif;
	        }
			@page {
			  margin: 0.2cm;
			}
			body {
			  margin-top: 2.5cm;
			  margin-bottom: 2cm;
				margin-left: .5cm;
				margin-right: .5cm;
				text-align: justify;
			}		
			div.header,
			div.footer {
			  position: fixed;
			  width: 100%;
			  border: 0px solid #888;
			  overflow: hidden;
			  padding: 0.1cm;
			  text-align: center;
			}
			div.header {
			  top: 0cm;
			  left: 0cm;
			  border-bottom-width: 0px;
			  height: 2.5cm;
			}
			div.footer {
			  bottom: 0cm;
			  left: 0cm;
			  border-top-width: 0px;
			  height: 2cm;
			}
			table {
				border-collapse: collapse;
			}
			table.entete{
	        	width: 120%;
			    margin-left:auto; 
			    margin-right:auto;
    			}
			table.produits{
				margin: 0 auto;
			}
			table.signature{
				margin-right: auto;
				margin-left: 0px;			
			}
			table.produits tbody tr:nth-child(odd){
				background-color: #F4F4F4;
			}        

	        table.produits{
	        	width: 100%;
    			table-layout: fixed;
	        }

	        table.produits th {
	        	font-weight: 800;
	        	font-size: 90%;
	        	border-bottom: 0.5px solid #000000;
	            border-left: 0; 
	            border-right: 0; 
	            border-top: 0;
	            color : #BB1515;
				background-color: #B7B7B7;
				height:20px;
	        }

	        td.total{
	        	background-color: #B7B7B7;
	        	font-weight: 700;
	        	font-size: 90%;	  
	        	border-bottom: 0.5px solid #000000;
				height:30px;
			}


	        table.produits td:nth-child(1){
	        	width: 95%; 
	        	text-align: left;
	        	border-right: 0.5px;
	        	border-color:  #000000;

	        }

	        table.produits td:nth-child(2){width: 5%; text-align: left; padding-right:10px;}

	        table.signature {
	        		text-align:right;
				    margin-left: 400px;
				    margin-right: 0;
				    page-break-inside: avoid;
	        }


	       	table.termes {
				page-break-inside: avoid;			
		
	        }

	       	table.piedDePage {
       			border-left:2.5px solid #D22420;
 	        	text-align:center;
 	        	width:100%;			
	        }

	        p.Titre{
	        	text-align:center;
	        	font-weight: 800;
	        	font-size: 100%;	        	
	        }
	        p.typededocuement {
	        	text-align:center;
	        	font-weight: 700;
	        	font-size: 90%;	        		        	
	        }

	        td.soustotal{
	        	font-weight: 500;
	        	font-size: 85%;						        	
	        }
	        div.acteengagement{
	        	page-break-before: always;
					        	
	        }
 	</style>
</head>
<body>
	<p class="Titre">{{devis.titre}}
	</p>
	<p class="typededocuement">Bordereau des prix</p> 
	<div class="header" >
	    <table class="entete">
	    <tbody>
	        <tr>
	            <td style="vertical-align: middle; width: 33%;">
	                <img src="img/LOGO.png" height="30" width="177">
	            </td>
	            <td class="numero" style="font-size:160%; vertical-align: middle; width: 33%;">
	                <strong>APPEL D'OFFRE OUVERT N°{{devis.numdemande}}</strong>
	            </td>
	            <td style="vertical-align: middle; width: 33%;">
	                <img src="img/cdgcap.png" height="50" width="150">
	            </td>
	        </tr>
	    </tbody>
	    </table>
	</div>
    <div class="footer">
	    <table class="piedDePage">
		    <tbody>
		        <tr>
			        <th>Contacts</th>
			        <th>Informations Juridiques</th>
			        <th>Identifiants de l'entreprise</th>
		        </tr>

		        <tr>
			        <td>{{devis.piedDePage.adresse}}</td>
			        <td>Microdata {{devis.piedDePage.formejuridique}}</td>
			        <td>ICE : {{devis.piedDePage.ice}}</td>
		        </tr>

		        <tr>
			        <td>{{devis.piedDePage.Telephone}}</td>
			        <td>Au capital de {{devis.piedDePage.capital}}</td>
			        <td>Patente : {{devis.piedDePage.patente}}</td>
		        </tr>

		        <tr>
			        <td>{{devis.piedDePage.fax}}</td>
			        <td>Registre de Commerce : {{devis.piedDePage.rc}}</td>
			        <td>CNSS : {{devis.piedDePage.cnss}}</td>
			        <td></td>
		        </tr>

		        <tr>
			        <td>{{devis.piedDePage.email}}</td>
			        <td></td>	        
			        <td></td>	        
		        </tr>
		        <tr>
			        <td>{{devis.piedDePage.siteweb}}</td>
			        <td></td>
			        <td></td>	        
		        </tr>
	    	</tbody>
	    </table>
	    <p class="page"></p>
	</div> 	
<br>
	<table class="produits">
	    <thead>
	    <tr>
	        <th  style="text-align:center; ">Offre forfaitaire détaillée <br> 
(incluantl'ensemble des frais)</th>
	        <th style="text-align:right; padding-right:20px">Coût</th>
	    </tr>
	    </thead>        
	    <tbody>
		    {% for produit in devis.fusionProduits %}{% if not produit.estVide and not produit.optionnel %}
			<tr>
				<td>{% if not produit.designation is empty %}<strong>{{produit.designation|capitalize}} : </strong><br>{% endif %}
					{{ produit.description|capitalize|raw}}

			   </td>
				<td class="soustotal" style="text-align:right; padding-right:20px border-right: 0.5px solid #000000;">{{ produit.sousTotalHT|number_format(2, ',', '.')}} {{ devis.devisevente.symbol }}</td>
	        </tr>
		    {% endif %}{% endfor %}	    	
		    {% for produit in devis.produits %}{% if not produit.estFusionné and not produit.optionnel %}
			<tr>
				<td>{% if not produit.designation is empty %}<strong>{{produit.designation|capitalize}} : </strong><br>{% endif %}
					{{ produit.description|capitalize|raw}}
					{% if not produit.garanties is empty %}
						<br><strong>Garantie : </strong>
						{% for garantie in produit.garanties %}
							<br>{{garantie}}
		    			{% endfor %}
					{% endif %}
					{% if not produit.termes is empty %}
						<br><strong>Conditions particulières : </strong>
						{% for terme in produit.termes %}
							<br>{{terme}}
		    			{% endfor %}
					{% endif %}
			   </td>
				<td class="soustotal" style="text-align:right; padding-right:20px border-right: 0.5px solid #000000;">{{ produit.sousTotalHT|number_format(2, ',', '.')}} {{ produit.devisevente.symbol }}</td>
	        </tr>
		    {% endif %}{% endfor %}
		    <tr >
			    <td class="total">Total général incluant l’ensemble des frais (MAD HT)</td>
			    <td class="soustotal total" style="text-align:right; color:black; padding-right:20px">{{devis.getTotalHT|number_format(2, ',', '.')}} {{devis.devisevente.symbol}}</td>
	        </tr>

		    {% for produit in devis.fusionProduits %}{% if produit.optionnel %}
			<tr>
				<td colspan="2"></td>
			</tr>
			<tr>
				<td>{% if not produit.designation is empty %}<strong>{{produit.designation|capitalize}} : </strong><br>{% endif %}
					{{ produit.description|capitalize|raw}}

			   </td>
				<td class="soustotal" style="text-align:right; padding-right:20px border-right: 0.5px solid #000000;">{{ produit.sousTotalHT|number_format(2, ',', '.')}} {{ devis.devisevente.symbol }}</td>
	        </tr>
		    {% endif %}{% endfor %}	    
	    </tbody>
	</table>

<br><br><br><br><br><br><br><br><br><br>

	{% if not devis.termes is empty %}
		<strong><u> Conditions commerciales générales : </u></strong><br><br>
	    <table class="termes">
	    	<tbody>

				{% for terme in devis.termes %}
					<tr>
				        <th>{{terme.categorie.nom|capitalize}} : </th>
				        <td>{{terme.description|capitalize}}</td>
			    	</tr>
			    {% endfor %}  
			</tbody>
		</table>	    	
	{% endif %}
<br><br>
    <table class="signature">
        <tbody>
	        <tr>
	        	<th>Hassane Amor</th>
	        <tr>	
	        	<td>Président Directeur Général</td>
	        </tr>
        </tbody>
    </table>










{% extends 'base.html.twig' %}

    {% block title %} Liste des opportunités d'affaires{% endblock %}
{% block body %}
    <h1>Liste des opportunités d'affaires</h1>

    <a class="btn btn-primary" style="float: right;" href="{{ path('opportunity_edit') }}">Ajouter une opportunité</a>
    <br>
    <br>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom du projet</th>
            <th>Client</th>
            <th>Type</th>
            <th>Technos</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for opportunity in opportunitys %}
            <tr>
                <td>{{ opportunity.id }}</td>
                <td>{{ opportunity.label }}</td>
                <td>{{ opportunity.customer.nom }}</td>
                <td>{{ opportunity.type }}</td>
                <td>
                    {% for tech in opportunity.technologies %}
                        <span class="label label-info">{{ tech }}</span>
                    {% endfor %}
                </td>
                <td class="pull text-right">{{ opportunity.total|number_format(2, '.', ' ') }}</td>
                <td>
                    <a class="btn btn-xs btn-warning" href="{{ path('opportunity_edit', { 'id': opportunity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

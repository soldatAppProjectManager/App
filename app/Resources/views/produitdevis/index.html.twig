{% extends 'base.html.twig' %}

{% block body %}
	<h1>Liste des produits</h1>
	<p class="lead">Consulter et editer les produits devis utilisées dans la gestion commerciale.<br> A venir, une mise a jour automatique des produits</p>

	<div class="row">
		<div class="col-lg-12">

			<hr>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Quantité</th>
						<th>Désignation</th>
						<th>Prix d'Achat HT</th>						
						<th>Devise d'Achat</th>
						<th>Métier</th>
						<th>Type Produit</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for produit in produitdevis %}
						<tr>
							<th scope="row">{{ produit.id }} </th>
							<td><strong>{{ produit.quantite }}</strong></td>
							<td>{{ produit.designation }} </td>
							<td>{{ produit.prixachatht }} </td>
							{% if produit.deviseachat %}
								<td>{{ produit.deviseachat.nom }} </td>
							{% else %}
								<td> NULL </td>
							{% endif %}
							<td>{{ produit.metier.nom }} </td>
							{% if produit.typeproduit %}
								<td>{{ produit.typeproduit.nom }} </td>
							{% else %}
								<td> NULL </td>
							{% endif %}
							<td>
								<a type="button" class="btn btn-default" href="/produitdevis/voir/{{produit.id}}">Voir</a>
								<a type="button" class="btn btn-warning" href="/produitdevis/edit/{{produit.id}}">Editer</a>
								<a type="button" class="btn btn-danger" href="/produitdevis/delete/{{produit.id}}">Effacer</a>
							</td>
							</tr>
					{% endfor %}
				</tbody>
			</table>
				<hr>
				<a type="button" class="btn btn-success" href="/produitdevis/create">Ajouter un produit</a>

		</div>
	</div>
{% endblock %}  
{% extends 'base.html.twig' %}

{% block body %}
	<h1>Liste des Type Produit</h1>
	<p class="lead">Consulter et editer les Type Produit utilis√©s dans la gestion commerciale.<br> A venir, une mise a jour automatique des Type Produit</p>

	<div class="row">
		<div class="col-lg-12">

			<hr>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Nom</th>
						<th>Description</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for typeproduit in list %}
						<tr>
							<th scope="row">{{ typeproduit.id }} </th>
							<td>{{ typeproduit.nom }} </td>
							<td>{{ typeproduit.description }} </td>
							<td>
								<a type="button" class="btn btn-default" href="{{ url('typeproduit_voir', {'id' : typeproduit.id})}}">Voir</a>
								<a type="button" class="btn btn-warning" href="{{ url('typeproduit_edit', {'id' : typeproduit.id})}}">Editer</a>
								<a type="button" class="btn btn-danger" href="{{ url('typeproduit_delete', {'id' : typeproduit.id})}}">Effacer</a>
							</td>
							</tr>
					{% endfor %}
				</tbody>
			</table>

				<hr>
				<a type="button" class="btn btn-success" href="{{ url('typeproduit_create')}}">Ajouter un Type Produit</a>

			      

		</div>
	</div>
{% endblock %}  